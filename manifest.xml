<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides/1.0"
           xsi:type="TaskPaneApp">

  <Id>0fb3d32f-7a0b-4e26-944c-4e8a8ffca01a</Id>
  <Version>1.0.8.0</Version>
  <ProviderName>Saman WM</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Saman Xerenity Tools"/>
  <Description DefaultValue="Xerenity integration for Excel (Taskpane + Commands)"/>

  <IconUrl DefaultValue="https://avelezx.github.io/add-in/assets/logo-filled.png"/>
  <HighResolutionIconUrl DefaultValue="https://avelezx.github.io/add-in/assets/logo-filled.png"/>

  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://avelezx.github.io/add-in/assets/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Workbook">
        <DesktopFormFactor>

          <!-- âœ… RIBBON FORZADO -->
          <ExtensionPoint xsi:type="CustomUI">
            <CustomTab id="Tab.Xerenity">
              <Group id="Group.Xerenity" label="Xerenity Tools">
                <Control xsi:type="Button" id="btnPing" label="Ping" onAction="runPING"/>
                <Control xsi:type="Button" id="btnRunXTY" label="Run XTY" onAction="runXTY"/>
              </Group>
            </CustomTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="TaskPane">
            <SourceLocation resid="Taskpane.Url"/>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://avelezx.github.io/add-in/assets/taskpane.html"/>
      </bt:Urls>
    </Resources>
  </VersionOverrides>
</OfficeApp>