<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides/1.0"
           xsi:type="TaskPaneApp">

  <Id>0fb3d32f-7a0b-4e26-944c-4e8a8ffca01a</Id>
  <Version>1.0.5.0</Version>
  <ProviderName>Saman WM</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Saman Xerenity Tools"/>
  <Description DefaultValue="Taskpane add-in to fetch Xerenity data and write to Excel"/>

  <IconUrl DefaultValue="https://avelezx.github.io/add-in/assets/logo-filled.png"/>
  <HighResolutionIconUrl DefaultValue="https://avelezx.github.io/add-in/assets/logo-filled.png"/>

  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://avelezx.github.io/add-in/assets/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Workbook">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="Tab.Xerenity">
              <Group id="Group.Xerenity" label="Xerenity Tools">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="IconUrl"/>
                  <bt:Image size="32" resid="IconUrl"/>
                  <bt:Image size="80" resid="IconUrl"/>
                </Icon>

                <Control xsi:type="Button" id="Button.RunXTY">
                  <Label resid="ButtonXTYLabel"/>
                  <Supertip>
                    <Title resid="ButtonXTYLabel"/>
                    <Description resid="ButtonXTYDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="IconUrl"/>
                    <bt:Image size="32" resid="IconUrl"/>
                    <bt:Image size="80" resid="IconUrl"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>runXTY</FunctionName>
                  </Action>
                </Control>

                <Control xsi:type="Button" id="Button.PING">
                  <Label resid="ButtonPINGLabel"/>
                  <Supertip>
                    <Title resid="ButtonPINGLabel"/>
                    <Description resid="ButtonPINGDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="IconUrl"/>
                    <bt:Image size="32" resid="IconUrl"/>
                    <bt:Image size="80" resid="IconUrl"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>runPING</FunctionName>
                  </Action>
                </Control>
              </Group>
            </CustomTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="TaskPane">
            <SourceLocation resid="Taskpane.Url"/>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://avelezx.github.io/add-in/assets/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Xerenity"/>
        <bt:String id="ButtonXTYLabel" DefaultValue="Run XTY"/>
        <bt:String id="ButtonPINGLabel" DefaultValue="Ping"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="ButtonXTYDesc" DefaultValue="Fetch Xerenity time series and write it to Excel"/>
        <bt:String id="ButtonPINGDesc" DefaultValue="Check connection"/>
      </bt:LongStrings>

      <bt:Images>
        <bt:Image id="IconUrl" DefaultValue="https://avelezx.github.io/add-in/assets/logo-filled.png"/>
      </bt:Images>
    </Resources>
  </VersionOverrides>
</OfficeApp>